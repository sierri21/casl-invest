{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/essential",
		"plugin:vue/vue3-recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		// 'linebreak-style': [
		// 	'error',
		// 	'windows'
		// ],
		"vue/multi-word-component-names": 0,
		"quotes": [
			"error",
			"single"
		],
		"no-irregular-whitespace": 0,
		"semi": [
			"error",
			"never"
		],
		"vue/no-v-html": 0
	}
}
